@model TourBookingSolution.Data.ViewModels.OrderView
@{
    ViewBag.Title = "Confirm_Global";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pages section">
    <div class="container">
        <div class="blog-single">
            @if (ViewBag.StatusPayment != null)
            {
                if (ViewBag.StatusPayment == true)
                {
                    if (Model != null)
                    {
                        <div class="blog-single-content">
                            <h5>Thanh toán thành công</h5>

                            <div class="share-post" style=" padding: 10px; text-align: left;">
                                <p>Mã đơn hàng: <b>@Model.Code</b></p>
                            </div>
                            <div class="share-post" style=" padding: 10px; text-align: left;">
                                <p>Tour: <b>@Model.TourName</b></p>
                            </div>
                            <div class="share-post" style=" padding: 10px; text-align: left;">
                                <p>Số tiền: <b>@String.Format("{0:0,00} đ", Model.Amount)</b></p>
                            </div>
                            <div class="share-post" style="margin: 5px; padding: 5px; text-align: center;">
                                <a class="button-default" style="margin: 5px;" href="/">Trang chủ</a>
                            </div>
                            <div class="share-post">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-google"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    }

                }
                else
                {
                    if (Model != null)
                    {
                        <div class="blog-single-content">
                            <h5>Thanh toán thất bại. Vui lòng check lại thông tin hoặc liên hệ quản trị viên</h5>

                            <div class="share-post" style=" padding: 10px; text-align: left;">
                                <p>Mã đơn hàng: <b>@Model.Code</b></p>
                            </div>
                            <div class="share-post" style=" padding: 10px; text-align: left;">
                                <p>Tour: <b>@Model.TourName</b></p>
                            </div>
                            <div class="share-post" style=" padding: 10px; text-align: left;">
                                <p>Số tiền: <b>@String.Format("{0:0,00} đ", Model.Amount)</b></p>
                            </div>
                            <div class="share-post" style="margin: 5px; padding: 5px; text-align: center;">
                                <a class="button-default" style="margin: 5px;" href="/">Trang chủ</a>
                            </div>
                            <div class="share-post">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-google"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    }

                }
            }

        </div>
    </div>
</div>

