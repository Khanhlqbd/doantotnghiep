@model TourBookingSolution.Data.ViewModels.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="login-register-wrap-home">
        <div class="container">
            <div class="content">
                <h1>GO GO TOUR</h1>
                <h6>Tours &amp; Travel</h6>
                @using (Html.BeginForm("Login", "Member", FormMethod.Post))
                {
                    @Html.TextBoxFor(model => model.Username, new { @placeholder = "Tên đăng nhập", @type = "text" })
                    @Html.ValidationMessageFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Password, new { @placeholder = "Mật khẩu", @type = "Password" })
                    @Html.ValidationMessageFor(model => model.Password)
                    <button class="button-default" type="submit">Đăng nhập</button>
                    <h6>Bạn chưa có tài khoản ? <a href="/dang-ky.html">Đăng ký</a></h6>
                }
            </div>
        </div>
    </div>

