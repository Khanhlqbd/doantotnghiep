@model TourBookingSolution.Data.ViewModels.TourView
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/Content/plugins/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" media="screen" />
<script src="/Content/plugins/datepicker/js/datepicker.js" type="text/javascript"></script>
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Sửa Tour</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Tour/List">Tour</a>
                        </li>
                        <li class="active">
                            <strong>Chỉnh sửa</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">TOUR</h2>
                </header>
                <div class="content-body">
                    <div class="row">
                        @using (Html.BeginForm("Edit", "Tour", FormMethod.Post))
                        {
                            <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                <i class="fa fa-check"></i> Thông tin cơ bản
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Tiêu đề</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Title" })
                                                        @Html.ValidationMessageFor(model => model.Title)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Mô tả</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextAreaFor(model => model.Desc, new { @class = "form-control", @placeholder = "Mô tả" })
                                                        @Html.ValidationMessageFor(model => model.Desc)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Mô tả thời gian</label>
                                                    <span class="desc">Ví dụ: 3 ngày 5 đêm</span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.DescTime, new { @class = "form-control", @placeholder = "Mô tả thời gian" })
                                                        @Html.ValidationMessageFor(model => model.DescTime)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Giá</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Giá" })
                                                        @Html.ValidationMessageFor(model => model.Price)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Trạng thái</label>
                                                    <span class="desc"></span>
                                                    <select name="Status" id="Status" class="form-control">
                                                        <option selected value="true">Hiện</option>
                                                        <option value="false">Ẩn</option>
                                                    </select>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="field-1">Điểm bắt đầu</label>
                                                        <span class="desc">Nhập tên địa danh hoặc địa điểm bắt đầu Tour</span>
                                                        <div class="controls">
                                                            <div class="controls">
                                                                @Html.TextBoxFor(model => model.PlaceStart, new { @class = "form-control", @placeholder = "Điểm bắt đầu" })
                                                                @Html.ValidationMessageFor(model => model.PlaceStart)
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="field-1">Điểm kết thúc</label>
                                                        <span class="desc">Nhập tên địa danh hoặc địa điểm kết thúc Tour</span>
                                                        <div class="controls">
                                                            <div class="controls">
                                                                @Html.TextBoxFor(model => model.PlaceEnd, new { @class = "form-control", @placeholder = "Điểm kết thúc" })
                                                                @Html.ValidationMessageFor(model => model.PlaceEnd)
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="field-1">Ngày đi</label>
                                                        <span class="desc"></span>
                                                        <div class="controls">
                                                            <div class="controls">
                                                                <input type="text" name="DateStart" id="DateStart" readonly class="form-control datepicker" data-format="dd/mm/yyyy" value="@String.Format("{0:dd/MM/yyyy}",Model.DateStart)">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="field-1">Ngày về</label>
                                                        <div class="controls">
                                                            <div class="controls">
                                                                <input type="text" name="EndDate" id="EndDate" readonly class="form-control datepicker" data-format="dd/mm/yyyy" value="@String.Format("{0:dd/MM/yyyy}",Model.EndDate)">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingThree">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion-2" href="#collapseThree-2" aria-expanded="false" aria-controls="collapseThree-2">
                                                <i class="fa fa-check"></i> Nội dung
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseThree-2" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Avatar</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <img src="~/Content/images/no-image.png" id="reviewImg" style="width:150px;height:auto;cursor:pointer" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="controls">
                                                    @Html.TextBoxFor(model => model.Avatar, new { @class = "form-control", @placeholder = "..." })
                                                </div>
                                                <script type="text/javascript">
                                                    $('#reviewImg').click(function () {
                                                        var finder = new CKFinder();
                                                        finder.selectActionFunction = function (fileUrl) {
                                                            $('#Avatar').val(fileUrl);
                                                            $('#reviewImg').attr("src", fileUrl);
                                                        };
                                                        finder.popup();
                                                    });
                                                </script>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-6">Content</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control autogrow", @placeholder = "Content" })

                                                    <script type="text/javascript">
                                                        CKEDITOR.replace("Content");
                                                    </script>
                                                    @Html.ValidationMessageFor(model => model.Content)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn">Cancel</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>
